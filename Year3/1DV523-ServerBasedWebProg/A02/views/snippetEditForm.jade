extends layout
block content
    if flash
        p.flash #{flash}
    form(method="post")
        h1 Select and Update snippet:
        each snippet in snippets
            input(type="radio", value=snippet._id, name="updatingSnippet")
            textarea.snippet(name=snippet._id, value=snippet._id,cols="50",rows="10",required=true) #{snippet.snippet}
        p
            input(type="submit", name="doit", value="Update Snippet")
